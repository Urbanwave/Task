@{
    ViewBag.Title = "Home Page";
}

@model Songs.Models.ViewModels.MainPageModel

<div class="container">
    <h2>Топ исполнителей</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Исполнитель</th>
                <th>Подборов</th>
                <th>Просмотров</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Singers)
            {
                <tr>
                    <td><a href="/Singer/SingerInfo?SingerId=@item.Id">@item.Name</a></td>
                    <td>@item.SongsAmount</td>
                    <td>@item.ViewsAmount</td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @for(int i = 1; i <= 10; i++)
        {
            if (i == ViewBag.Page)
            {
                <a class="pagenumber" href="/Home/Index?page=@i">@i</a>
            }
            else
            {
                <a href="/Home/Index?page=@i">@i</a>
            }
        }
    </div>
</div>